<Window x:Class="EarTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:atwpf="clr-namespace:AlphaTab.Wpf;assembly=AlphaTab.Core"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition></RowDefinition>
			<!--<RowDefinition></RowDefinition>-->
		</Grid.RowDefinitions>
		
		<ToolBar>
			<Button Command="{Binding OpenFileCommand}">Open...</Button>
		</ToolBar>

		<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
			<atwpf:AlphaTabCanvas Grid.Row="1" Track="{Binding CurrentTrack}" RenderFinished="OnRenderFinished"></atwpf:AlphaTabCanvas>
		</ScrollViewer>
    </Grid>
</Window>
